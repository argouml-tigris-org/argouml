#
# add -Dlog4j.configuration=org/argouml/resource/security.lcf
# to the command line to use this log4j configuration
#
log4j.rootCategory=ERROR, SECURITY
#
log4j.category.org.argouml.application.security.ArgoSecurityManager=DEBUG
# 
log4j.appender.SECURITY=org.apache.log4j.ConsoleAppender
log4j.appender.SECURITY.layout=org.apache.log4j.PatternLayout
log4j.appender.SECURITY.layout.ConversionPattern=%5p: %m (%F:%L)%n
log4j.appender.SECURITY.Threshold=DEBUG
